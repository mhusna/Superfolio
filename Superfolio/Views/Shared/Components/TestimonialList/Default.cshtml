@using EntityLayer
@model List<Testimonial>

<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Referanslarım</h2>
        </div>
        <div class="row">

            @{
                int i = 0;
                int delay = 100;
            }

            @for(; i<Model.Count/2; i++)
            {
                <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="@delay">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@Model[i].Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@Model[i].Name</div>
                            <div class="text-small">@Model[i].Title / @Model[i].Company</div>
                        </div><img class="me-md-3 rounded" src="@Model[i].ImageUrl" width="96" height="96" alt="client 1" />
                    </div>
                </div>

                delay += 100;
            }

            @for(; i<Model.Count; i++)
            {
                <div class="col-md-6 mb-5" data-aos="fade-left" data-aos-delay="@delay">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@Model[i].Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@Model[i].Name</div>
                            <div class="text-small">@Model[i].Company / @Model[i].Company</div>
                        </div><img class="me-md-3 rounded" src="@Model[i].ImageUrl" width="96" height="96" alt="client 1" />
                    </div>
                </div>

                delay += 100;
            }
        </div>
    </div>
</div>